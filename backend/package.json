{
  "name": "@your-org/trello-backend-types",
  "version": "1.0.0",
  "description": "Shared types and schemas for Trello Demo API",
  "main": "./dist/exports.js",
  "types": "./dist/exports.d.ts",
  "exports": {
    ".": {
      "types": "./dist/exports.d.ts",
      "import": "./dist/exports.js",
      "require": "./dist/exports.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./router": {
      "types": "./dist/rpc/index.d.ts",
      "import": "./dist/rpc/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "generate:types": "bun run scripts/generate-types.ts",
    "build:types": "tsc -p tsconfig.types.json",
    "prepublishOnly": "bun run build:types"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.44.0",
    "zod": ">=4.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@neondatabase/serverless": "^1.0.2",
    "@orpc/contract": "^1.10.1",
    "@orpc/server": "^1.10.1",
    "@orpc/zod": "^1.10.1",
    "@types/node": "^24.9.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.10.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}